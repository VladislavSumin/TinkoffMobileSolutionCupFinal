<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UiKit.Light" parent="android:Theme.Holo.Light">
        <item name="uikitBackgroundPrimaryColor">@color/backgroundPrimaryColorLight</item>
        <item name="uikitBackgroundSecondaryColor">@color/backgroundSecondaryColorLight</item>
        <item name="uikitButtonTint">@color/flatButtonTintLight</item>
        <item name="uikitButtonPressedTint">@color/flatButtonTintPressedLight</item>

        <item name="uikitTextPrimaryColor">@color/textPrimaryColorLight</item>
        <item name="uikitTextSecondaryColor">@color/textSecondaryColorLight</item>
        <item name="uikitTextAccentColor">@color/uikitTextAccentColorLight</item>

        <item name="uikitCardCornerRadius">@dimen/uikitCardCornerRadiusDefault</item>
        <item name="uikitButtonCornerRadius">@dimen/uikitButtonCornerRadiusDefault</item>

        <item name="uikitTextHeader">@style/UiKit.Text.Header</item>
        <item name="uikitTextSubheader">@style/UiKit.Text.Subheader</item>
        <item name="uikitTextTitle">@style/UiKit.Text.Title</item>
        <item name="uikitTextDescription">@style/UiKit.Text.Description</item>

        <item name="uikitButton">@style/UiKit.Button</item>
        <item name="uikitButtonFlat">@style/UiKit.Button.Flat</item>
    </style>

    <style name="UiKit" />

    <style name="UiKit.Text">
        <item name="android:textColor">?uikitTextPrimaryColor</item>
    </style>

    <style name="UiKit.Text.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UiKit.Text.Subheader">
        <item name="android:textColor">?uikitTextSecondaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UiKit.Text.Title">
        <item name="android:textColor">?uikitTextPrimaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UiKit.Text.Description">
        <item name="android:textColor">?uikitTextSecondaryColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="UiKit.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?uikitTextAccentColor</item>
        <item name="android:background">@drawable/uikit_button_background</item>
    </style>

    <style name="UiKit.Button.Flat">
        <item name="android:background">@drawable/uikit_button_background_flat</item>

    </style>

</resources>

