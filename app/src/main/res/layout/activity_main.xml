<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ru.vs.uikit.components.UikitHeaderCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="true"
            app:headerText="Header"
            app:icon="@drawable/uikit_ic_star"
            app:subheaderText="Subheader" />

        <ru.vs.uikit.components.UikitHeaderCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="false"
            app:headerText="Header"
            app:icon="@drawable/uikit_ic_star"
            app:subheaderText="Subheader" />

        <ru.vs.uikit.components.UikitHeaderCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            app:headerText="Header"
            app:icon="@drawable/uikit_ic_star" />

        <ru.vs.uikit.components.UikitHeaderCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="false"
            app:headerText="Header"
            app:icon="@drawable/uikit_ic_star" />

        <ru.vs.uikit.components.UikitHeaderCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="true"
            app:headerText="Header"
            app:icon="@drawable/uikit_ic_star"
            app:subheaderText="Subheader">

            <Button
                style="?attr/uikitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:text="Button" />
        </ru.vs.uikit.components.UikitHeaderCard>

        <ru.vs.uikit.components.UikitHeaderCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="false"
            app:headerText="Header"
            app:icon="@drawable/uikit_ic_star"
            app:subheaderText="Subheader">

            <Button
                style="?attr/uikitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:text="Button" />
        </ru.vs.uikit.components.UikitHeaderCard>


        <ru.vs.uikit.components.UikitContentCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="true"
            app:icon="@drawable/uikit_ic_star"
            app:subtitleText="Subtitle"
            app:titleText="Title" />

        <ru.vs.uikit.components.UikitContentCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="false"
            app:icon="@drawable/uikit_ic_star"
            app:subtitleText="Subtitle"
            app:titleText="Title" />

        <ru.vs.uikit.components.UikitContentCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="true"
            app:icon="@drawable/uikit_ic_star"
            app:showClose="true"
            app:subtitleText="Subtitle"
            app:titleText="Title" />


        <ru.vs.uikit.components.UikitHeaderSecondaryCard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:enabled="true"
            app:buttonText="Button"
            app:headerText="Header">

            <ru.vs.uikit.components.UikitContent
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/uikit_ic_star"
                app:subtitleText="Subtitle"
                app:titleText="Title" />

            <ru.vs.uikit.components.UikitContent
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/uikit_ic_star"
                app:subtitleText="Subtitle"
                app:titleText="Title" />

            <ru.vs.uikit.components.UikitContent
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/uikit_ic_star"
                app:subtitleText="Subtitle"
                app:titleText="Title" />

            <ru.vs.uikit.components.UikitContent
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/uikit_ic_star"
                app:subtitleText="Subtitle"
                app:titleText="Title" />

            <Button
                style="?attr/uikitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:text="Button" />

        </ru.vs.uikit.components.UikitHeaderSecondaryCard>

    </LinearLayout>
</ScrollView>